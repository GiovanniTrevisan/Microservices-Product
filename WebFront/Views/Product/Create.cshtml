@model WebFront.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>ProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mx-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check mx-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="OutOfStock" /> @Html.DisplayNameFor(model => model.OutOfStock)
                </label>
            </div>
            <div class="form-group mx-3">
                <label asp-for="IdCategory" class="control-label"></label>
                <div class="col-md-5">
                    @Html.DropDownListFor(item => item.IdCategory, new SelectList(ViewBag.CategoriesList, "Id", "Name"), "Select Category", new { id = "category", @class = "form-control" })
                </div>
            </div>
            <div class="form-group mx-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
